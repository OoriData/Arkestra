{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "Product Name": {
                "type": "string",
                "description": "Product name"
            },
            "Product Link": {
                "type": "string",
                "description": "Direct link to product page"
            },
            "Image Link": {
                "type": "string", 
                "description": "URL of product image"
            },
            "Price": {
                "type": "string",
                "description": "Product price in US Dollars, according to the following regex pattern: ^\\$\\.[0-9,]+$"
            }
        },
        "required": ["Product Name", "Product Link", "Image Link", "Price"]
    }
}